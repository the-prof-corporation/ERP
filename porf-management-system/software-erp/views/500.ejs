<div class="d-flex align-items-center justify-content-center vh-75">
  <div class="text-center">
    <h1 class="display-1 fw-bold">500</h1>
    <p class="fs-3"><span class="text-danger">Oops!</span> Server Error.</p>
    <p class="lead">
      Something went wrong on our end.
    </p>
    <% if(typeof error !== 'undefined' && Object.keys(error).length > 0) { %>
      <div class="alert alert-danger">
        <p><strong>Error:</strong> <%= error.message %></p>
        <% if(error.stack) { %>
          <pre class="mt-3"><%= error.stack %></pre>
        <% } %>
      </div>
    <% } %>
    <a href="/" class="btn btn-primary">Go Home</a>
  </div>
</div>
